# Flask
FLASK_SECRET_KEY=replace-with-random-string

# ToolsDB (MariaDB on Toolforge)
TOOLSDB_HOST=tools.db.svc.wikimedia.cloud
TOOLSDB_DATABASE=xwiki__events
MYSQL_CNF_PATH=/data/project/xwiki/.my.cnf

# EventStreams
EVENTSTREAM_URL=https://stream.wikimedia.org/v2/stream/recentchange
USER_AGENT=Toolforge-xwiki/1.0 (contact: https://toolforge.org/tool/xwiki)
RECONNECT_DELAY=3.0
TRACKED_REFRESH_SEC=60

# OAuth2 (confirm endpoints/scopes on Wikitech)
OAUTH_CLIENT_ID=...
OAUTH_CLIENT_SECRET=...
OAUTH_AUTHORIZE_URL=https://meta.wikimedia.org/w/rest.php/oauth2/authorize
OAUTH_TOKEN_URL=https://meta.wikimedia.org/w/rest.php/oauth2/access_token
OAUTH_USERINFO_URL=https://meta.wikimedia.org/w/rest.php/oauth2/resource/profile
OAUTH_SCOPE=basic
